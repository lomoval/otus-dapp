# Next.js Frontend Environment Variables
# Copy this file to .env.local and update with your actual values

# Ethereum Configuration
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# Solana Configuration
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# TON Configuration
NEXT_PUBLIC_TON_RPC_URL=https://testnet.toncenter.com/api/v2/jsonRPC
NEXT_PUBLIC_TON_API_KEY=YOUR_TON_API_KEY

# App Configuration
NEXT_PUBLIC_APP_NAME=Multi-Chain Finance Dashboard
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development Configuration
NEXT_PUBLIC_DEBUG=false

# Optional: For production deployments
# NEXT_PUBLIC_VERCEL_URL=your-production-url.vercel.app
